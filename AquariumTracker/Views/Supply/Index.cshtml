@model SuppliesViewModel 
@{
    ViewData["Title"] = "Supply List";
}
<style>
    .styled-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }
        .styled-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }
        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
        }
        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .styled-table tbody tr:last-of-type {
                border-bottom: 2px solid #009879;
            }
            .styled-table tbody tr.active-row {
                font-weight: bold;
                color: #009879;
            }

</style>
<div class="row">
    <div class="col-md-4">
        <h1>@ViewData["Title"]</h1>
    </div>
    <div class="col-md-3 text-right">
        <a asp-controller="Supply" asp-action="EditSupply" asp-route-fishId="0"><h4>Add New Supply</h4></a>
    </div>
</div>


<div class="row">
    <div class="col-md-10">
        <table class="styled-table">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Amount Remaining</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Supplies)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.AmountRemaining</td>
                    <td><a asp-controller="Supply" asp-action="EditSupply" asp-route-supplyId="@item.SupplyId"><span>Edit</span></a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
